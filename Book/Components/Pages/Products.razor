@page "/products"
@using Book.Services
@using Book.Services
@using Book.Services
@inject IBookService BookService
@inject CartService CartService
@inject NavigationManager NavManager

<h3>لیست کتاب‌ها</h3>

@if (BookService.GetBooks().Count == 0)
{
    <p>کتابی موجود نیست.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>عنوان</th>
                <th>نویسنده</th>
                <th>قیمت (تومان)</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in BookService.GetBooks())
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Price</td>
                    <td>
                        <button class="btn btn-primary" @onclick="() => AddToCart(book)">افزودن به سبد خرید</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    void AddToCart(Book book)
    {
        CartService.AddToCart(book);
        StateHasChanged();
        // Optional: هدایت به صفحه Cart بعد از افزودن
        // NavManager.NavigateTo("/cart");
    }
}


